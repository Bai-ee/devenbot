# ===============================================
# Grok Trading Bot Configuration Template
# ===============================================
# Copy this file to .env and fill in your actual values

# GMGN API Configuration
GMGN_API_KEY=your_gmgn_api_key_here
GMGN_BASE_URL=https://api.gmgn.ai

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=your_webhook_url_here

# Wallet Configuration
PRIVATE_KEY=your_wallet_private_key_here
RPC_URL=https://your_rpc_endpoint_here

# Trading Configuration
DEFAULT_SLIPPAGE=0.01
MAX_POSITION_SIZE=1000
MIN_LIQUIDITY_THRESHOLD=50000
RISK_PERCENTAGE=2.0

# Logging Configuration
LOG_LEVEL=INFO
DEBUG_MODE=False

# Database Configuration (optional)
DATABASE_URL=sqlite:///grok_bot.db

# Risk Management
STOP_LOSS_PERCENTAGE=10.0
TAKE_PROFIT_PERCENTAGE=25.0
MAX_DAILY_TRADES=10

# Metrics Configuration
METRICS_UPDATE_INTERVAL=30
TREND_ANALYSIS_PERIOD=24

# Optional: External APIs
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Optional: Production Database (PostgreSQL)
POSTGRES_PASSWORD=secure_password_here 